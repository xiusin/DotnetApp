<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fluent="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
        xmlns:fluentCommon="clr-namespace:FluentIcons.Common;assembly=FluentIcons.Common"
        mc:Ignorable="d" d:DesignWidth="680" d:DesignHeight="580"
        x:Class="ConfigButtonDisplay.MainWindow"
        Title="键盘按键显示器 - Fluent Design"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True"
        SystemDecorations="None"
        Background="Transparent"
        CanResize="True"
        MinWidth="600"
        MinHeight="500"
        Width="680"
        Height="580">
    
    <!-- Fluent Design 主容器 - 便签贴纸效果 -->
    <Border Background="#F2FFFFFF" 
            CornerRadius="16" 
            Margin="8"
            BoxShadow="0 8 32 0 #40000000"
            BorderThickness="1"
            BorderBrush="#33FFFFFF">
        

        
        <Grid RowDefinitions="Auto,*,Auto">
            <!-- 标签容器 -->
            <Panel Name="NoteTagContainer" Grid.Row="0" Grid.RowSpan="3" />
            
            <!-- 自定义标题栏 - Fluent Design风格 -->
            <Border Grid.Row="0" 
                    Background="Transparent" 
                    Padding="24,16" 
                    Margin="0,0,0,16">
                <Grid ColumnDefinitions="*,Auto">
                    <!-- 标题区域 -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="键盘按键显示器" 
                                  FontSize="32" 
                                  FontWeight="Light" 
                                  Foreground="#FF2D3748"
                                  Margin="0,0,0,4"/>
                        <TextBlock Text="实时显示按键组合，支持自定义样式和位置" 
                                  FontSize="14" 
                                  Foreground="#FF718096"
                                  Opacity="0.8"/>
                    </StackPanel>
                    
                    <!-- 窗口控制按钮 - 使用FluentIcons -->
                    <StackPanel Grid.Column="1" 
                               Orientation="Horizontal" 
                               Spacing="8"
                               VerticalAlignment="Top">
                        <Button Name="MinimizeButton" 
                               Width="32" 
                               Height="32"
                               Background="Transparent"
                               Foreground="#FF718096"
                               BorderThickness="0"
                               CornerRadius="16"
                               Click="MinimizeButton_Click">
                            <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Subtract}" FontSize="16"/>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#20000000"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                        <Button Name="CloseButton" 
                               Width="32" 
                               Height="32"
                               Background="Transparent"
                               Foreground="#FF718096"
                               BorderThickness="0"
                               CornerRadius="16"
                               Click="CloseButton_Click">
                            <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Dismiss}" FontSize="14"/>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#FFE53E3E"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        
            <!-- 主要内容 - Fluent Design卡片 -->
            <Border Grid.Row="1" 
                    Background="#FAFBFC" 
                    CornerRadius="12" 
                    Padding="32" 
                    Margin="16,0,16,16"
                    BoxShadow="0 4 16 0 #10000000">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="32">
                        <!-- 状态显示 - Fluent Design -->
                        <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,8">
                            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                                <TextBlock Text="监听状态" 
                                          VerticalAlignment="Center"
                                          FontSize="18"
                                          FontWeight="SemiBold"
                                          Foreground="#FF2D3748"/>
                                <Border Background="#F7FAFC" 
                                       CornerRadius="16" 
                                       Padding="12,6"
                                       BorderThickness="1"
                                       BorderBrush="#E2E8F0">
                                    <TextBlock Name="StatusText" 
                                              Text="准备就绪"
                                              FontSize="14"
                                              FontWeight="Medium"
                                              Foreground="#FF4A5568"/>
                                </Border>
                            </StackPanel>
                            <ToggleSwitch Grid.Column="1" 
                                           Name="ListeningToggle"
                                           IsChecked="True"
                                           OnContent="监听中"
                                           OffContent="已停止"
                                           IsCheckedChanged="ListeningToggle_Toggled"/>
                        </Grid>
                
                        <!-- 显示设置 - Fluent Design -->
                        <StackPanel Spacing="24">
                            <TextBlock Text="显示设置" 
                                      FontSize="22" 
                                      FontWeight="SemiBold" 
                                      Foreground="#FF2D3748" 
                                      Margin="0,0,0,8"/>
                            
                            <Grid ColumnDefinitions="200,*" 
                                  RowDefinitions="Auto,Auto,Auto">
                                
                                <!-- 背景颜色 -->
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                          Text="背景颜色" 
                                          VerticalAlignment="Center"
                                          FontSize="16"
                                          FontWeight="Medium"
                                          Foreground="#FF4A5568"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" 
                                         Name="BackgroundColorCombo" 
                                         SelectedIndex="0" 
                                         SelectionChanged="BackgroundColorCombo_SelectionChanged"
                                         Background="White"
                                         BorderBrush="#E2E8F0"
                                         BorderThickness="1"
                                         CornerRadius="8"
                                         Padding="12,8"
                                         FontSize="14">
                                    <ComboBoxItem Content="蓝色主题"/>
                                    <ComboBoxItem Content="绿色主题"/>
                                    <ComboBoxItem Content="红色主题"/>
                                    <ComboBoxItem Content="紫色主题"/>
                                    <ComboBoxItem Content="橙色主题"/>
                                </ComboBox>
                                
                                <!-- 显示时长 -->
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                          Text="显示时长" 
                                          VerticalAlignment="Center"
                                          FontSize="16"
                                          FontWeight="Medium"
                                          Foreground="#FF4A5568"/>
                                <StackPanel Grid.Row="1" Grid.Column="1" 
                                           Orientation="Horizontal" 
                                           Spacing="16">
                                    <Slider Name="DisplayDurationSlider" 
                                           Minimum="1" Maximum="5" Value="2" 
                                           TickFrequency="0.5"
                                           IsSnapToTickEnabled="True" 
                                           Width="240"
                                           Foreground="#FF3182CE"/>
                                    <Border Background="#EDF2F7" 
                                           CornerRadius="6" 
                                           Padding="8,4">
                                        <TextBlock Text="{Binding #DisplayDurationSlider.Value, StringFormat='{}{0:F1}秒'}"
                                                  VerticalAlignment="Center" 
                                                  FontSize="14"
                                                  FontWeight="Medium"
                                                  Foreground="#FF4A5568"/>
                                    </Border>
                                </StackPanel>
                                
                                <!-- 字体大小 -->
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                          Text="字体大小" 
                                          VerticalAlignment="Center"
                                          FontSize="16"
                                          FontWeight="Medium"
                                          Foreground="#FF4A5568"/>
                                <StackPanel Grid.Row="2" Grid.Column="1" 
                                           Orientation="Horizontal" 
                                           Spacing="16">
                                    <Slider Name="FontSizeSlider" 
                                           Minimum="12" Maximum="48" Value="28" 
                                           TickFrequency="2"
                                           IsSnapToTickEnabled="True" 
                                           Width="240"
                                           Foreground="#FF3182CE"/>
                                    <Border Background="#EDF2F7" 
                                           CornerRadius="6" 
                                           Padding="8,4">
                                        <TextBlock Text="{Binding #FontSizeSlider.Value, StringFormat='{}{0:F0}px'}"
                                                  VerticalAlignment="Center" 
                                                  FontSize="14"
                                                  FontWeight="Medium"
                                                  Foreground="#FF4A5568"/>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                
                        <!-- 预览 - Fluent Design风格 -->
                        <Border Name="PreviewBorder" 
                               Background="#FF3182CE"
                               CornerRadius="16"
                               Padding="32,24"
                               Margin="0,8,0,0"
                               BoxShadow="0 8 24 0 #403182CE">
                            <TextBlock Name="PreviewText" 
                                      Text="按键预览"
                                      FontSize="28"
                                      FontWeight="SemiBold"
                                      HorizontalAlignment="Center"
                                      Foreground="White"
                                      TextAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        
            <!-- 状态栏 - Fluent Design按钮 -->
            <Border Grid.Row="2" 
                    Background="#FAFBFC" 
                    CornerRadius="12" 
                    Padding="24,20"
                    Margin="16,0,16,16"
                    BoxShadow="0 4 16 0 #10000000">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12">
                        <!-- 状态指示器 - 使用FluentIcons -->
                        <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Circle}" 
                                          FontSize="12" 
                                          Foreground="#FF48BB78"
                                          VerticalAlignment="Center"/>
                        <TextBlock Name="StatusTextBlock" 
                                  Text="准备就绪 - 点击开始监听"
                                  VerticalAlignment="Center"
                                  FontSize="14"
                                  FontWeight="Medium"
                                  Foreground="#FF4A5568"/>
                    </StackPanel>
                    
                    <!-- Fluent Design按钮组 - 使用FluentIcons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="12">
                        <Button Name="TestButton" 
                               Click="TestButton_Click"
                               Background="#FF3182CE"
                               Foreground="White"
                               BorderThickness="0"
                               CornerRadius="8"
                               Padding="16,8"
                               FontSize="14"
                               FontWeight="Medium">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Play}" FontSize="14"/>
                                <TextBlock Text="测试显示" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#FF2C5AA0"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                        
                        <Button Name="HideButton" 
                               Click="HideButton_Click"
                               Background="#F7FAFC"
                               Foreground="#FF4A5568"
                               BorderThickness="1"
                               BorderBrush="#E2E8F0"
                               CornerRadius="8"
                               Padding="16,8"
                               FontSize="14"
                               FontWeight="Medium">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.EyeOff}" FontSize="14"/>
                                <TextBlock Text="隐藏窗口" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#EDF2F7"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                        
                        <Button Name="ConfigButton"
                               Click="ConfigButton_Click"
                               Background="#F7FAFC"
                               Foreground="#FF4A5568"
                               BorderThickness="1"
                               BorderBrush="#E2E8F0"
                               CornerRadius="8"
                               Padding="16,8"
                               FontSize="14"
                               FontWeight="Medium">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Settings}" FontSize="14"/>
                                <TextBlock Text="配置" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#EDF2F7"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                        
                        <Button Name="ManualTestButton"
                               Click="ManualTestButton_Click"
                               Background="#F7FAFC"
                               Foreground="#FF4A5568"
                               BorderThickness="1"
                               BorderBrush="#E2E8F0"
                               CornerRadius="8"
                               Padding="16,8"
                               FontSize="14"
                               FontWeight="Medium">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Beaker}" FontSize="14"/>
                                <TextBlock Text="手动测试" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#EDF2F7"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                        
                        <Button Name="TagTestButton"
                               Click="TagTestButton_Click"
                               Background="#F7FAFC"
                               Foreground="#FF4A5568"
                               BorderThickness="1"
                               BorderBrush="#E2E8F0"
                               CornerRadius="8"
                               Padding="16,8"
                               FontSize="14"
                               FontWeight="Medium">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Tag}" FontSize="14"/>
                                <TextBlock Text="标签测试" VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#EDF2F7"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
