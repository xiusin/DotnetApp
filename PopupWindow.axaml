<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fluent="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
        xmlns:fluentCommon="clr-namespace:FluentIcons.Common;assembly=FluentIcons.Common"
        mc:Ignorable="d" d:DesignWidth="320" d:DesignHeight="400"
        x:Class="ConfigButtonDisplay.PopupWindow"
        Title="状态栏菜单"
        WindowStartupLocation="Manual"
        CanResize="False"
        ShowInTaskbar="False"
        Topmost="True"
        Width="320"
        Height="400"
        SystemDecorations="None"
        Background="Transparent">

    <!-- 主容器 - Fluent Design风格 -->
    <Border Background="#F0FFFFFF" 
            CornerRadius="16" 
            BorderThickness="1" 
            BorderBrush="#20000000"
            BoxShadow="0 8 32 0 #40000000">
        
        <Grid RowDefinitions="Auto,*,Auto" Margin="0">
            
            <!-- 标题栏 -->
            <Grid Grid.Row="0" 
                  Background="#10000000" 
                  Height="50"
                  ColumnDefinitions="*,Auto">
                
                <StackPanel Grid.Column="0" 
                           Orientation="Horizontal" 
                           Spacing="12" 
                           VerticalAlignment="Center"
                           Margin="20,0">
                    <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Apps}" 
                                      FontSize="18" 
                                      Foreground="#FF3182CE"/>
                    <TextBlock Text="状态栏菜单" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="#FF2D3748"
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button Name="CloseButton" 
                       Grid.Column="1"
                       Width="32" 
                       Height="32" 
                       Margin="0,0,12,0"
                       Background="Transparent"
                       Foreground="#FF718096"
                       BorderThickness="0"
                       CornerRadius="16"
                       VerticalAlignment="Center"
                       Click="CloseButton_Click">
                    <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Dismiss}" FontSize="14"/>
                    <Button.Styles>
                        <Style Selector="Button:pointerover">
                            <Setter Property="Background" Value="#FFE53E3E"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </Button.Styles>
                </Button>
            </Grid>
            
            <!-- 内容区域 - 可动态填充 -->
            <ScrollViewer Grid.Row="1" 
                         Padding="20"
                         VerticalScrollBarVisibility="Auto">
                <StackPanel Name="ContentContainer" Spacing="16">
                    
                    <!-- 快速操作区域 -->
                    <Border Background="#F7FAFC" 
                           CornerRadius="12" 
                           Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="快速操作" 
                                      FontSize="14" 
                                      FontWeight="SemiBold"
                                      Foreground="#FF2D3748"/>
                            
                            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                                
                                <Button Grid.Column="0" Grid.Row="0"
                                       Background="#FF3182CE"
                                       Foreground="White"
                                       BorderThickness="0"
                                       CornerRadius="8"
                                       Padding="12,8"
                                       Click="QuickAction1_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Play}" FontSize="12"/>
                                        <TextBlock Text="开始监听" FontSize="12"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Grid.Column="1" Grid.Row="0" Margin="12,0,0,8"
                                       Background="#F7FAFC"
                                       Foreground="#FF4A5568"
                                       BorderThickness="1"
                                       BorderBrush="#E2E8F0"
                                       CornerRadius="8"
                                       Padding="12,8"
                                       Click="QuickAction2_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Settings}" FontSize="12"/>
                                        <TextBlock Text="设置" FontSize="12"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Grid.Column="0" Grid.Row="1" Margin="0,8,0,0"
                                       Background="#F7FAFC"
                                       Foreground="#FF4A5568"
                                       BorderThickness="1"
                                       BorderBrush="#E2E8F0"
                                       CornerRadius="8"
                                       Padding="12,8"
                                       Click="QuickAction3_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Beaker}" FontSize="12"/>
                                        <TextBlock Text="测试" FontSize="12"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Grid.Column="1" Grid.Row="1" Margin="12,8,0,0"
                                       Background="#F7FAFC"
                                       Foreground="#FF4A5568"
                                       BorderThickness="1"
                                       BorderBrush="#E2E8F0"
                                       CornerRadius="8"
                                       Padding="12,8"
                                       Click="QuickAction4_Click">
                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                        <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Info}" FontSize="12"/>
                                        <TextBlock Text="关于" FontSize="12"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- 状态信息区域 -->
                    <Border Background="#F7FAFC" 
                           CornerRadius="12" 
                           Padding="16">
                        <StackPanel Spacing="12">
                            <TextBlock Text="系统状态" 
                                      FontSize="14" 
                                      FontWeight="SemiBold"
                                      Foreground="#FF2D3748"/>
                            
                            <StackPanel Spacing="8">
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <fluent:SymbolIcon Grid.Column="0" 
                                                      Symbol="{x:Static fluentCommon:Symbol.Circle}" 
                                                      FontSize="12" 
                                                      Foreground="#FF48BB78"/>
                                    <TextBlock Grid.Column="1" 
                                              Text="键盘监听" 
                                              FontSize="13"
                                              Foreground="#FF4A5568"
                                              Margin="12,0"/>
                                    <TextBlock Grid.Column="2" 
                                              Name="KeyboardStatusText"
                                              Text="已启用" 
                                              FontSize="13"
                                              FontWeight="Medium"
                                              Foreground="#FF48BB78"/>
                                </Grid>
                                
                                <Grid ColumnDefinitions="Auto,*,Auto">
                                    <fluent:SymbolIcon Grid.Column="0" 
                                                      Symbol="Circle" 
                                                      FontSize="12" 
                                                      Foreground="#FF3182CE"/>
                                    <TextBlock Grid.Column="1" 
                                              Text="显示窗口" 
                                              FontSize="13"
                                              Foreground="#FF4A5568"
                                              Margin="12,0"/>
                                    <TextBlock Grid.Column="2" 
                                              Name="DisplayStatusText"
                                              Text="就绪" 
                                              FontSize="13"
                                              FontWeight="Medium"
                                              Foreground="#FF3182CE"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- 动态内容区域 - 预留扩展 -->
                    <Border Name="DynamicContentArea"
                           Background="#F7FAFC" 
                           CornerRadius="12" 
                           Padding="16"
                           IsVisible="False">
                        <StackPanel Name="DynamicContentContainer" Spacing="8">
                            <!-- 动态内容将在这里填充 -->
                        </StackPanel>
                    </Border>
                    
                </StackPanel>
            </ScrollViewer>
            
            <!-- 底部操作栏 -->
            <Border Grid.Row="2" 
                   Background="#10000000" 
                   Height="50"
                   CornerRadius="0,0,16,16">
                <Grid ColumnDefinitions="*,Auto" Margin="20,0">
                    
                    <TextBlock Grid.Column="0"
                              Name="FooterStatusText"
                              Text="准备就绪"
                              FontSize="12"
                              Foreground="#FF718096"
                              VerticalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="1" 
                               Orientation="Horizontal" 
                               Spacing="8"
                               VerticalAlignment="Center">
                        <Button Background="Transparent"
                               Foreground="#FF718096"
                               BorderThickness="0"
                               Padding="8"
                               CornerRadius="6"
                               Click="RefreshButton_Click">
                            <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.ArrowClockwise}" FontSize="14"/>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#20000000"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                        
                        <Button Background="Transparent"
                               Foreground="#FF718096"
                               BorderThickness="0"
                               Padding="8"
                               CornerRadius="6"
                               Click="SettingsButton_Click">
                            <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Settings}" FontSize="14"/>
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Background" Value="#20000000"/>
                                </Style>
                            </Button.Styles>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
            
        </Grid>
    </Border>
</Window>