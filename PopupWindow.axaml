<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="100"
        x:Class="ConfigButtonDisplay.PopupWindow"
        Title="显示内容"
        WindowStartupLocation="Manual"
        CanResize="False"
        ShowInTaskbar="False"
        Topmost="True"
        Width="300"
        Height="100"
        SystemDecorations="None">
    
    <Border Name="MainBorder" Background="#E3333333" CornerRadius="10" BorderThickness="2" BorderBrush="White">
        <Grid>
            <TextBlock Name="DisplayTextBlock" 
                      Text="Hello World!" 
                      FontSize="18" 
                      FontWeight="Bold"
                      Foreground="White"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      TextAlignment="Center"
                      TextWrapping="Wrap"/>
            
            <Button Name="CloseButton" 
                   Content="✕" 
                   Width="25" 
                   Height="25" 
                   HorizontalAlignment="Right" 
                   VerticalAlignment="Top"
                   Margin="0,5,5,0"
                   Background="Transparent"
                   Foreground="White"
                   BorderThickness="0"
                   FontSize="16"
                   FontWeight="Bold"
                   Click="CloseButton_Click"/>
        </Grid>
    </Border>
</Window>