<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="48"
        x:Class="ConfigButtonDisplay.Features.KeyboardMonitoring.Controls.KeyDisplayWindow"
        Title="按键显示"
        WindowStartupLocation="Manual"
        CanResize="False"
        ShowInTaskbar="False"
        Topmost="True"
        MinWidth="100"
        MaxWidth="800"
        MinHeight="48"
        MaxHeight="48"
        SystemDecorations="None"
        Focusable="False"
        ShowActivated="False"
        Background="Transparent"
        SizeToContent="WidthAndHeight"
        Opacity="1">
    
    <!-- Acrylic 亚克力背景效果 -->
    <Panel>
        <!-- 阴影层 -->
        <Border CornerRadius="8"
                Margin="0"
                Background="Transparent">
            <Border.Effect>
                <DropShadowEffect Color="#80000000" 
                                  OffsetX="0" 
                                  OffsetY="6" 
                                  BlurRadius="24" 
                                  Opacity="0.5"/>
            </Border.Effect>
        </Border>
        
        <!-- Acrylic 背景 -->
        <ExperimentalAcrylicBorder x:Name="MainBorder"
                                   CornerRadius="8"
                                   Margin="0">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="#000000"
                    TintOpacity="0.85"
                    MaterialOpacity="0.95"
                    FallbackColor="#DD000000"/>
            </ExperimentalAcrylicBorder.Material>
            
            <!-- 内容容器 -->
            <Border BorderThickness="0"
                    CornerRadius="8"
                    Padding="24,10"
                    Background="Transparent">
                
                <!-- 按键文本 - 白色 -->
                <TextBlock x:Name="DisplayTextBlock" 
                          Text=""
                          FontSize="16"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          TextAlignment="Center"
                          TextWrapping="NoWrap"
                          Foreground="White"
                          FontFamily="Segoe UI, Microsoft YaHei, Arial, sans-serif"/>
            </Border>
        </ExperimentalAcrylicBorder>
    </Panel>
</Window>