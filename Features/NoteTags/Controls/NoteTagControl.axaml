<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fluent="using:FluentIcons.Avalonia"
             x:Class="ConfigButtonDisplay.Features.NoteTags.Controls.NoteTagControl"
             Width="152" Height="86">
    <!-- Fluent Design Note Tag -->
    <Grid>
        <!-- Subtle Shadow Layer -->
        <Border Background="#15000000" 
                CornerRadius="0,0,6,6"
                Margin="1,6,0,0"
                Opacity="0.4"/>
        
        <!-- Main Note Layer -->
        <Grid Margin="0,0,1,1">
            <!-- Note Background with Fluent Acrylic Feel -->
            <Border Name="TagBorder" 
                    Background="#FFFFFDF7" 
                    CornerRadius="0,0,6,6" 
                    Padding="10,14,10,10" 
                    BorderBrush="#15323130" 
                    BorderThickness="0,0,1,1"
                    Cursor="Hand">
                <Border.Effect>
                    <DropShadowEffect Color="#30000000" 
                                    OffsetX="0" 
                                    OffsetY="2" 
                                    BlurRadius="6"
                                    Opacity="0.2"/>
                </Border.Effect>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Note Content Area -->
                    <TextBlock Name="TagText" 
                              Grid.Row="1"
                              Text="便签内容" 
                              VerticalAlignment="Center" 
                              HorizontalAlignment="Center"
                              Foreground="#FF323130" 
                              FontWeight="Medium"
                              FontSize="12"
                              TextAlignment="Center"
                              TextWrapping="Wrap"
                              MaxLines="3"
                              Margin="0,2,0,2"/>
                    
                    <!-- Bottom Icon with Fluent Style -->
                    <Border Grid.Row="2"
                            Background="#0AFFB74D"
                            CornerRadius="6"
                            Padding="4,2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom">
                        <fluent:SymbolIcon Symbol="Note"
                                          FontSize="10"
                                          Foreground="#FFFFB74D"
                                          Opacity="0.7"/>
                    </Border>
                </Grid>
            </Border>
            
            <!-- 撕裂边缘效果 - 顶部不规则边缘 -->
            <Canvas Height="12" VerticalAlignment="Top">
                <!-- 撕裂纹理 -->
                <Path Fill="#FFFEF5" Stroke="#D0D0D0" StrokeThickness="0.5">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="0,8">
                                <LineSegment Point="8,10"/>
                                <LineSegment Point="15,6"/>
                                <LineSegment Point="22,9"/>
                                <LineSegment Point="30,7"/>
                                <LineSegment Point="38,11"/>
                                <LineSegment Point="45,8"/>
                                <LineSegment Point="52,10"/>
                                <LineSegment Point="60,6"/>
                                <LineSegment Point="68,9"/>
                                <LineSegment Point="75,7"/>
                                <LineSegment Point="83,10"/>
                                <LineSegment Point="90,8"/>
                                <LineSegment Point="98,11"/>
                                <LineSegment Point="105,7"/>
                                <LineSegment Point="113,9"/>
                                <LineSegment Point="120,6"/>
                                <LineSegment Point="128,10"/>
                                <LineSegment Point="135,8"/>
                                <LineSegment Point="143,11"/>
                                <LineSegment Point="150,7"/>
                                <LineSegment Point="158,9"/>
                                <LineSegment Point="160,8"/>
                                <LineSegment Point="160,12"/>
                                <LineSegment Point="0,12"/>
                                <LineSegment Point="0,8"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
                
                <!-- 撕裂阴影 -->
                <Path Fill="#20000000" Opacity="0.3">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="0,9">
                                <LineSegment Point="8,11"/>
                                <LineSegment Point="15,7"/>
                                <LineSegment Point="22,10"/>
                                <LineSegment Point="30,8"/>
                                <LineSegment Point="38,12"/>
                                <LineSegment Point="45,9"/>
                                <LineSegment Point="52,11"/>
                                <LineSegment Point="60,7"/>
                                <LineSegment Point="68,10"/>
                                <LineSegment Point="75,8"/>
                                <LineSegment Point="83,11"/>
                                <LineSegment Point="90,9"/>
                                <LineSegment Point="98,12"/>
                                <LineSegment Point="105,8"/>
                                <LineSegment Point="113,10"/>
                                <LineSegment Point="120,7"/>
                                <LineSegment Point="128,11"/>
                                <LineSegment Point="135,9"/>
                                <LineSegment Point="143,12"/>
                                <LineSegment Point="150,8"/>
                                <LineSegment Point="158,10"/>
                                <LineSegment Point="160,9"/>
                                <LineSegment Point="160,10"/>
                                <LineSegment Point="0,10"/>
                                <LineSegment Point="0,9"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
            </Canvas>
            
            <!-- 撕裂边缘效果 - 右侧不规则边缘 -->
            <Canvas Width="12" HorizontalAlignment="Right">
                <!-- 右侧撕裂纹理 -->
                <Path Fill="#FFFEF5" Stroke="#D0D0D0" StrokeThickness="0.5">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="4,12">
                                <LineSegment Point="6,18"/>
                                <LineSegment Point="2,24"/>
                                <LineSegment Point="5,30"/>
                                <LineSegment Point="3,36"/>
                                <LineSegment Point="7,42"/>
                                <LineSegment Point="4,48"/>
                                <LineSegment Point="6,54"/>
                                <LineSegment Point="2,60"/>
                                <LineSegment Point="5,66"/>
                                <LineSegment Point="3,72"/>
                                <LineSegment Point="7,78"/>
                                <LineSegment Point="4,84"/>
                                <LineSegment Point="6,90"/>
                                <LineSegment Point="0,90"/>
                                <LineSegment Point="0,12"/>
                                <LineSegment Point="4,12"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
                
                <!-- 右侧撕裂阴影 -->
                <Path Fill="#20000000" Opacity="0.3">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="5,12">
                                <LineSegment Point="7,18"/>
                                <LineSegment Point="3,24"/>
                                <LineSegment Point="6,30"/>
                                <LineSegment Point="4,36"/>
                                <LineSegment Point="8,42"/>
                                <LineSegment Point="5,48"/>
                                <LineSegment Point="7,54"/>
                                <LineSegment Point="3,60"/>
                                <LineSegment Point="6,66"/>
                                <LineSegment Point="4,72"/>
                                <LineSegment Point="8,78"/>
                                <LineSegment Point="5,84"/>
                                <LineSegment Point="7,90"/>
                                <LineSegment Point="1,90"/>
                                <LineSegment Point="1,12"/>
                                <LineSegment Point="5,12"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
            </Canvas>
            
            <!-- Fluent Tape Effect -->
            <Border Background="#E8F5F5F0" 
                    Height="14" 
                    Width="36"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                    Margin="0,-1,0,0"
                    CornerRadius="2"
                    Opacity="0.7"
                    BorderBrush="#10323130"
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#15000000" 
                                    OffsetX="0" 
                                    OffsetY="1" 
                                    BlurRadius="2"
                                    Opacity="0.3"/>
                </Border.Effect>
            </Border>
        </Grid>
    </Grid>
</UserControl>