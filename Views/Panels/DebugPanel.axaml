<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="500"
             x:Class="ConfigButtonDisplay.Views.Panels.DebugPanel">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="16" Margin="0">
            
            <!-- Header Card -->
            <Border Background="#05FFFFFF" 
                    CornerRadius="6" 
                    Padding="16,12"
                    BorderBrush="#0F323130" 
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Spacing="2">
                        <TextBlock Text="调试选项" 
                                  FontSize="14" 
                                  FontWeight="SemiBold" 
                                  Foreground="#FF323130"/>
                        <TextBlock Text="配置调试和日志功能" 
                                  FontSize="10" 
                                  Foreground="#FF605E5C"/>
                    </StackPanel>
                    <ToggleSwitch Grid.Column="1"
                                 Name="DebugModeToggle" 
                                 OnContent="启用" 
                                 OffContent="禁用" 
                                 IsChecked="False"
                                 VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- Debug Overlay Card -->
            <Border Background="#05FFFFFF" 
                    CornerRadius="6" 
                    Padding="16,12"
                    BorderBrush="#0F323130" 
                    BorderThickness="1">
                <StackPanel Spacing="10">
                    <TextBlock Text="调试覆盖层" 
                              FontSize="12" 
                              FontWeight="SemiBold" 
                              Foreground="#FF323130"/>
                    <StackPanel Spacing="6">
                        <CheckBox Name="ShowOverlayCheckBox" 
                                 Content="显示调试覆盖层" 
                                 IsChecked="False"
                                 FontSize="10"
                                 Foreground="#FF323130"/>
                        <CheckBox Name="ShowFpsCheckBox" 
                                 Content="显示 FPS 计数器" 
                                 IsChecked="False"
                                 FontSize="10"
                                 Foreground="#FF323130"/>
                        <CheckBox Name="ShowMemoryCheckBox" 
                                 Content="显示内存使用" 
                                 IsChecked="False"
                                 FontSize="10"
                                 Foreground="#FF323130"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Log Settings Card -->
            <Border Background="#05FFFFFF" 
                    CornerRadius="6" 
                    Padding="16,12"
                    BorderBrush="#0F323130" 
                    BorderThickness="1">
                <StackPanel Spacing="10">
                    <TextBlock Text="日志设置" 
                              FontSize="12" 
                              FontWeight="SemiBold" 
                              Foreground="#FF323130"/>
                    <Border Background="#0A000000" CornerRadius="4" Padding="10,6">
                        <Grid ColumnDefinitions="80,*">
                            <TextBlock Grid.Column="0" 
                                      Text="日志级别" 
                                      VerticalAlignment="Center" 
                                      FontSize="10"
                                      Foreground="#FF323130"/>
                            <ComboBox Grid.Column="1" 
                                     Name="LogLevelComboBox" 
                                     SelectedIndex="1"
                                     FontSize="10"
                                     Background="Transparent"
                                     BorderThickness="0">
                                <ComboBoxItem Content="详细 (Verbose)"/>
                                <ComboBoxItem Content="信息 (Info)"/>
                                <ComboBoxItem Content="警告 (Warning)"/>
                                <ComboBoxItem Content="错误 (Error)"/>
                            </ComboBox>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Actions Card -->
            <Border Background="#05FFFFFF" 
                    CornerRadius="6" 
                    Padding="16,12"
                    BorderBrush="#0F323130" 
                    BorderThickness="1">
                <StackPanel Spacing="10">
                    <TextBlock Text="操作" 
                              FontSize="12" 
                              FontWeight="SemiBold" 
                              Foreground="#FF323130"/>
                    <Button Content="清除日志" 
                            Background="Transparent" 
                            Foreground="#FF323130" 
                            BorderThickness="1" 
                            BorderBrush="#FF8A8886" 
                            CornerRadius="6" 
                            Height="32"
                            FontSize="11"
                            FontWeight="Medium"
                            HorizontalAlignment="Stretch">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#0A000000"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                </StackPanel>
            </Border>
            
            <!-- Warning Card -->
            <Border Background="#0AE81123" 
                   BorderBrush="#20E81123" 
                   BorderThickness="1" 
                   CornerRadius="6" 
                   Padding="14,10">
                <StackPanel Spacing="6">
                    <TextBlock Text="⚠️ 注意" 
                              FontSize="11" 
                              FontWeight="SemiBold" 
                              Foreground="#FFE81123"/>
                    <TextBlock TextWrapping="Wrap" 
                              FontSize="10" 
                              Foreground="#FF323130"
                              Text="调试模式会影响性能，仅在开发和测试时启用。"/>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
