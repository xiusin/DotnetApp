<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="500"
             x:Class="ConfigButtonDisplay.Views.Panels.KeyboardMonitorPanel">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="16" Margin="0">
            
            <!-- Header Section -->
            <Border Background="#05FFFFFF" 
                    CornerRadius="6" 
                    Padding="16,12"
                    BorderBrush="#0F323130" 
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Spacing="2">
                        <TextBlock Text="键盘监控设置" 
                                  FontSize="14" 
                                  FontWeight="SemiBold"
                                  Foreground="#FF323130"/>
                        <TextBlock Text="配置按键显示的位置、样式和行为"
                                  FontSize="10"
                                  Foreground="#FF605E5C"/>
                    </StackPanel>
                    <ToggleSwitch Grid.Column="1"
                                 Name="EnabledToggle"
                                 OnContent="启用"
                                 OffContent="禁用"
                                 IsChecked="True"
                                 VerticalAlignment="Center"/>
                </Grid>
            </Border>
            
            <!-- Display Position Card -->
            <Border Background="#05FFFFFF" 
                    CornerRadius="6" 
                    Padding="16,12"
                    BorderBrush="#0F323130" 
                    BorderThickness="1">
                <StackPanel Spacing="10">
                    <TextBlock Text="显示位置" 
                              FontSize="12" 
                              FontWeight="SemiBold" 
                              Foreground="#FF323130"/>
                    <Border Background="#0A000000" 
                            CornerRadius="4" 
                            Padding="10,6">
                        <ComboBox Name="PositionComboBox"
                                 SelectedIndex="4"
                                 HorizontalAlignment="Stretch"
                                 FontSize="11"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <ComboBoxItem Content="左上角"/>
                            <ComboBoxItem Content="顶部居中"/>
                            <ComboBoxItem Content="右上角"/>
                            <ComboBoxItem Content="左下角"/>
                            <ComboBoxItem Content="底部居中"/>
                            <ComboBoxItem Content="右下角"/>
                        </ComboBox>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Display Style Card -->
            <Border Background="#05FFFFFF" 
                    CornerRadius="6" 
                    Padding="16,12"
                    BorderBrush="#0F323130" 
                    BorderThickness="1">
                <StackPanel Spacing="10">
                    <TextBlock Text="显示样式" 
                              FontSize="12" 
                              FontWeight="SemiBold" 
                              Foreground="#FF323130"/>
                    
                    <StackPanel Spacing="8">
                        <!-- Background Color -->
                        <Border Background="#0A000000" CornerRadius="4" Padding="10,6">
                            <Grid ColumnDefinitions="100,*">
                                <TextBlock Grid.Column="0"
                                          Text="背景颜色" 
                                          VerticalAlignment="Center"
                                          FontSize="10"
                                          Foreground="#FF323130"/>
                                <ComboBox Grid.Column="1"
                                         Name="BackgroundColorComboBox"
                                         SelectedIndex="0"
                                         FontSize="10"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ComboBoxItem Content="蓝色"/>
                                    <ComboBoxItem Content="绿色"/>
                                    <ComboBoxItem Content="红色"/>
                                    <ComboBoxItem Content="紫色"/>
                                    <ComboBoxItem Content="橙色"/>
                                </ComboBox>
                            </Grid>
                        </Border>
                        
                        <!-- Opacity -->
                        <Border Background="#0A000000" CornerRadius="4" Padding="10,6">
                            <Grid ColumnDefinitions="100,*,50">
                                <TextBlock Grid.Column="0"
                                          Text="透明度"
                                          VerticalAlignment="Center"
                                          FontSize="10"
                                          Foreground="#FF323130"/>
                                <Slider Grid.Column="1"
                                       Name="OpacitySlider"
                                       Minimum="0.1" Maximum="1.0" Value="0.9"
                                       TickFrequency="0.1"
                                       IsSnapToTickEnabled="True"
                                       Margin="8,0"/>
                                <Border Grid.Column="2"
                                        Background="#FF0078D4" 
                                        CornerRadius="6" 
                                        Padding="6,2">
                                    <TextBlock Text="{Binding #OpacitySlider.Value, StringFormat='{}{0:P0}'}"
                                              FontSize="9"
                                              FontWeight="Medium"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Font Size -->
                        <Border Background="#0A000000" CornerRadius="4" Padding="10,6">
                            <Grid ColumnDefinitions="100,*,50">
                                <TextBlock Grid.Column="0"
                                          Text="字体大小"
                                          VerticalAlignment="Center"
                                          FontSize="10"
                                          Foreground="#FF323130"/>
                                <Slider Grid.Column="1"
                                       Name="FontSizeSlider"
                                       Minimum="12" Maximum="48" Value="28"
                                       TickFrequency="2"
                                       IsSnapToTickEnabled="True"
                                       Margin="8,0"/>
                                <Border Grid.Column="2"
                                        Background="#FF0078D4" 
                                        CornerRadius="6" 
                                        Padding="6,2">
                                    <TextBlock Text="{Binding #FontSizeSlider.Value, StringFormat='{}{0:F0}'}"
                                              FontSize="9"
                                              FontWeight="Medium"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Font Color -->
                        <Border Background="#0A000000" CornerRadius="4" Padding="10,6">
                            <Grid ColumnDefinitions="100,*">
                                <TextBlock Grid.Column="0"
                                          Text="字体颜色"
                                          VerticalAlignment="Center"
                                          FontSize="10"
                                          Foreground="#FF323130"/>
                                <ComboBox Grid.Column="1"
                                         Name="FontColorComboBox"
                                         SelectedIndex="0"
                                         FontSize="10"
                                         Background="Transparent"
                                         BorderThickness="0">
                                    <ComboBoxItem Content="白色"/>
                                    <ComboBoxItem Content="黑色"/>
                                    <ComboBoxItem Content="灰色"/>
                                </ComboBox>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Display Behavior Card -->
            <Border Background="#05FFFFFF" 
                    CornerRadius="6" 
                    Padding="16,12"
                    BorderBrush="#0F323130" 
                    BorderThickness="1">
                <StackPanel Spacing="10">
                    <TextBlock Text="显示行为" 
                              FontSize="12" 
                              FontWeight="SemiBold" 
                              Foreground="#FF323130"/>
                    
                    <StackPanel Spacing="8">
                        <!-- Display Duration -->
                        <Border Background="#0A000000" CornerRadius="4" Padding="10,6">
                            <Grid ColumnDefinitions="100,*,60">
                                <TextBlock Grid.Column="0"
                                          Text="显示时长"
                                          VerticalAlignment="Center"
                                          FontSize="10"
                                          Foreground="#FF323130"/>
                                <Slider Grid.Column="1"
                                       Name="DisplayDurationSlider"
                                       Minimum="1" Maximum="10" Value="2"
                                       TickFrequency="0.5"
                                       IsSnapToTickEnabled="True"
                                       Margin="8,0"/>
                                <Border Grid.Column="2"
                                        Background="#FF0078D4" 
                                        CornerRadius="6" 
                                        Padding="6,2">
                                    <TextBlock Text="{Binding #DisplayDurationSlider.Value, StringFormat='{}{0:F1}s'}"
                                              FontSize="9"
                                              FontWeight="Medium"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Fade In Duration -->
                        <Border Background="#0A000000" CornerRadius="4" Padding="10,6">
                            <Grid ColumnDefinitions="100,*,60">
                                <TextBlock Grid.Column="0"
                                          Text="淡入时长"
                                          VerticalAlignment="Center"
                                          FontSize="10"
                                          Foreground="#FF323130"/>
                                <Slider Grid.Column="1"
                                       Name="FadeInSlider"
                                       Minimum="0.1" Maximum="1.0" Value="0.2"
                                       TickFrequency="0.1"
                                       IsSnapToTickEnabled="True"
                                       Margin="8,0"/>
                                <Border Grid.Column="2"
                                        Background="#FF0078D4" 
                                        CornerRadius="6" 
                                        Padding="6,2">
                                    <TextBlock Text="{Binding #FadeInSlider.Value, StringFormat='{}{0:F1}s'}"
                                              FontSize="9"
                                              FontWeight="Medium"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Fade Out Duration -->
                        <Border Background="#0A000000" CornerRadius="4" Padding="10,6">
                            <Grid ColumnDefinitions="100,*,60">
                                <TextBlock Grid.Column="0"
                                          Text="淡出时长"
                                          VerticalAlignment="Center"
                                          FontSize="10"
                                          Foreground="#FF323130"/>
                                <Slider Grid.Column="1"
                                       Name="FadeOutSlider"
                                       Minimum="0.1" Maximum="1.0" Value="0.3"
                                       TickFrequency="0.1"
                                       IsSnapToTickEnabled="True"
                                       Margin="8,0"/>
                                <Border Grid.Column="2"
                                        Background="#FF0078D4" 
                                        CornerRadius="6" 
                                        Padding="6,2">
                                    <TextBlock Text="{Binding #FadeOutSlider.Value, StringFormat='{}{0:F1}s'}"
                                              FontSize="9"
                                              FontWeight="Medium"
                                              Foreground="White"
                                              HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Key Filter Card -->
            <Border Background="#05FFFFFF" 
                    CornerRadius="6" 
                    Padding="16,12"
                    BorderBrush="#0F323130" 
                    BorderThickness="1">
                <StackPanel Spacing="10">
                    <Grid>
                        <StackPanel Spacing="2">
                            <TextBlock Text="按键过滤" 
                                      FontSize="12" 
                                      FontWeight="SemiBold" 
                                      Foreground="#FF323130"/>
                            <TextBlock Text="选择要显示的按键类型"
                                      FontSize="9"
                                      Foreground="#FF605E5C"/>
                        </StackPanel>
                    </Grid>
                    
                    <StackPanel Spacing="6">
                        <CheckBox Name="ShowModifiersCheckBox" 
                                 Content="显示修饰键 (Ctrl, Alt, Shift, Win)" 
                                 IsChecked="True"
                                 FontSize="10"
                                 Foreground="#FF323130"/>
                        <CheckBox Name="ShowFunctionKeysCheckBox" 
                                 Content="显示功能键 (F1-F12)" 
                                 IsChecked="True"
                                 FontSize="10"
                                 Foreground="#FF323130"/>
                        <CheckBox Name="ShowAlphaNumericCheckBox" 
                                 Content="显示字母数字键 (A-Z, 0-9)" 
                                 IsChecked="True"
                                 FontSize="10"
                                 Foreground="#FF323130"/>
                        <CheckBox Name="ShowNavigationCheckBox" 
                                 Content="显示导航键 (方向键, Home, End 等)" 
                                 IsChecked="True"
                                 FontSize="10"
                                 Foreground="#FF323130"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Live Preview Card -->
            <Border Background="#05FFFFFF" 
                    CornerRadius="6" 
                    Padding="16,12"
                    BorderBrush="#0F323130" 
                    BorderThickness="1">
                <StackPanel Spacing="12">
                    <TextBlock Text="实时预览" 
                              FontSize="12" 
                              FontWeight="SemiBold" 
                              Foreground="#FF323130"/>
                    
                    <Border Name="PreviewBorder"
                           Background="#FF0078D4"
                           CornerRadius="8"
                           Padding="20,12"
                           HorizontalAlignment="Center"
                           MinWidth="180">
                        <Border.Effect>
                            <DropShadowEffect Color="#300078D4" 
                                            OffsetX="0" 
                                            OffsetY="2" 
                                            BlurRadius="8"
                                            Opacity="0.3"/>
                        </Border.Effect>
                        <TextBlock Name="PreviewText"
                                  Text="Ctrl + Shift + A"
                                  FontSize="24"
                                  FontWeight="SemiBold"
                                  Foreground="White"
                                  HorizontalAlignment="Center"/>
                    </Border>
                    
                    <Button Name="TestDisplayButton"
                           Content="测试显示效果"
                           HorizontalAlignment="Center"
                           Background="#FF0078D4"
                           Foreground="White"
                           BorderThickness="0"
                           CornerRadius="6"
                           Height="32"
                           Padding="20,0"
                           FontSize="11"
                           FontWeight="Medium"
                           Click="TestDisplayButton_Click">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#FF106EBE"/>
                            </Style>
                            <Style Selector="Button:pressed">
                                <Setter Property="Background" Value="#FF005A9E"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
    
</UserControl>
