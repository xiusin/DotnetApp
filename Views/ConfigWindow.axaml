<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fluent="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
        xmlns:fluentCommon="clr-namespace:FluentIcons.Common;assembly=FluentIcons.Common"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="ConfigButtonDisplay.Views.ConfigWindow"
        Title="应用设置"
        Width="800"
        Height="600"
        SystemDecorations="None"
        Background="Transparent"
        CanResize="False">
    
    <!-- Fluent Design 主容器 -->
    <Border Background="#F2FFFFFF"
            CornerRadius="16"
            Margin="8"
            BoxShadow="0 8 32 0 #40000000"
            BorderThickness="1"
            BorderBrush="#33FFFFFF">
        
        <Grid RowDefinitions="Auto,*,Auto">
            <!-- Header -->
            <Border Grid.Row="0"
                    Background="Transparent"
                    Padding="24,16"
                    Margin="0,0,0,16">
                <Grid ColumnDefinitions="*,Auto">
                    <!-- 标题 -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="应用设置"
                                  FontSize="28"
                                  FontWeight="SemiBold"
                                  Foreground="#FF2D3748"/>
                        <TextBlock Text="配置应用程序的各项功能"
                                  FontSize="14"
                                  Foreground="#FF718096"
                                  Margin="0,4,0,0"/>
                    </StackPanel>
                    
                    <!-- 关闭按钮 -->
                    <Button Grid.Column="1"
                            Name="CloseButton"
                            Width="32"
                            Height="32"
                            Background="Transparent"
                            Foreground="#FF718096"
                            BorderThickness="0"
                            CornerRadius="16"
                            Click="CloseButton_Click"
                            VerticalAlignment="Top">
                        <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Dismiss}" FontSize="14"/>
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#FFE53E3E"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Content - TabControl -->
            <TabControl Grid.Row="1"
                       Margin="16,0,16,16"
                       Background="Transparent">
                
                <!-- 通用设置 -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="12,8">
                            <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Settings}" FontSize="16"/>
                            <TextBlock Text="通用设置" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Background="#FAFBFC" CornerRadius="12" Padding="24">
                        <TextBlock Text="通用设置面板" FontSize="14" Foreground="#FF718096"/>
                    </Border>
                </TabItem>
                
                <!-- 键盘监控 -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="12,8">
                            <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Keyboard}" FontSize="16"/>
                            <TextBlock Text="键盘监控" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Background="#FAFBFC" CornerRadius="12" Padding="24">
                        <TextBlock Text="键盘监控面板" FontSize="14" Foreground="#FF718096"/>
                    </Border>
                </TabItem>
                
                <!-- AI 聊天 -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="12,8">
                            <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Chat}" FontSize="16"/>
                            <TextBlock Text="AI 聊天" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Background="#FAFBFC" CornerRadius="12" Padding="24">
                        <TextBlock Text="AI 聊天面板" FontSize="14" Foreground="#FF718096"/>
                    </Border>
                </TabItem>
                
                <!-- 标签管理 -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="12,8">
                            <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Tag}" FontSize="16"/>
                            <TextBlock Text="标签管理" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Background="#FAFBFC" CornerRadius="12" Padding="24">
                        <TextBlock Text="标签管理面板" FontSize="14" Foreground="#FF718096"/>
                    </Border>
                </TabItem>
                
                <!-- 边缘组件 -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="12,8">
                            <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Apps}" FontSize="16"/>
                            <TextBlock Text="边缘组件" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Background="#FAFBFC" CornerRadius="12" Padding="24">
                        <TextBlock Text="边缘组件面板" FontSize="14" Foreground="#FF718096"/>
                    </Border>
                </TabItem>
                
                <!-- 调试选项 -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="12,8">
                            <fluent:SymbolIcon Symbol="{x:Static fluentCommon:Symbol.Bug}" FontSize="16"/>
                            <TextBlock Text="调试选项" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Border Background="#FAFBFC" CornerRadius="12" Padding="24">
                        <TextBlock Text="调试选项面板" FontSize="14" Foreground="#FF718096"/>
                    </Border>
                </TabItem>
                
            </TabControl>
            
            <!-- Footer - 按钮栏 -->
            <Border Grid.Row="2"
                    Background="#FAFBFC"
                    CornerRadius="12"
                    Padding="24,16"
                    Margin="16,0,16,16">
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Right"
                           Spacing="12">
                    <Button Name="SaveButton"
                            Content="保存"
                            Click="SaveButton_Click"
                            Background="#FF3182CE"
                            Foreground="White"
                            BorderThickness="0"
                            CornerRadius="8"
                            Padding="24,10"
                            FontSize="14"
                            FontWeight="Medium">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#FF2C5AA0"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                    
                    <Button Name="CancelButton"
                            Content="取消"
                            Click="CancelButton_Click"
                            Background="#F7FAFC"
                            Foreground="#FF4A5568"
                            BorderThickness="1"
                            BorderBrush="#E2E8F0"
                            CornerRadius="8"
                            Padding="24,10"
                            FontSize="14"
                            FontWeight="Medium">
                        <Button.Styles>
                            <Style Selector="Button:pointerover">
                                <Setter Property="Background" Value="#EDF2F7"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
